                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_horizontal"
                    android:textColor="#ffff4100"
                    android:text="--"
                    android:textSize="20dp"
                    android:enabled="false"
                    android:id="@+id/TimeCarData"/>
