                    android:layout_height="wrap_content"
                    android:gravity="fill_horizontal"
                    android:textColor="#ffb0b0b0"
                    android:text="Time Probably Walking"
                    android:textSize="14dp"
                    android:id="@+id/TimeProbablyWalkingText"/>
